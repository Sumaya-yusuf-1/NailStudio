{
  "compilerOptions": {
    // Target environment
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",

    // Projektstruktur
    "rootDir": "./src",
    "outDir": "./dist",

    // Node/Express med import-syntax
    "esModuleInterop": true,

    // Hj√§lpsamma flaggor
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src"]
}